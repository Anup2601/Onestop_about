         /* Navigation Bar */
  nav {
    background-color: #333;
    padding: .3rem;
  }

  nav .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  nav .logo {
    text-decoration: none;
}

nav .logo .logo-img {
    height: 50px; /* Adjust size as needed */
    width: auto;  /* Maintain aspect ratio */
    object-fit: contain; /* Keeps the image within bounds without distortion */
    vertical-align: middle; /* Aligns with other nav items */
}



  nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
  }

  nav ul li {
    margin-left: 1rem;
  }

  nav ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
    transition: color 0.3s ease;
  }

  nav ul li a:hover {
    color: #ccc;
  }

         

        .hero-section {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            min-height: 400px;
        }

        .service-card {
            transition: transform 0.3s ease;
        }

        .service-card:hover {
            transform: translateY(-5px);
        }

        .service-icon {
            color: var(--primary-color);
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .cta-button {
            background-color: var(--accent-color);
            transition: background-color 0.3s ease;
        }

        .cta-button:hover {
            background-color: #d97706;
        }

        .feature-icon {
            color: var(--primary-color);
            width: 24px;
            height: 24px;
        }

        @media (max-width: 768px) {
            .hero-section {
